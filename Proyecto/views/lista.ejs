<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Lista de Contactos</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: radial-gradient(circle at top, #4a6cf7 0, #1e1e2f 40%, #050816 100%);
            color: #e5e5e5;
            min-height: 100vh;
        }

        .card {
            background: #2b2b40;
            color: #e5e5e5;
            border-radius: 16px;
            box-shadow: 0 18px 35px rgba(0,0,0,0.45);
        }

        label {
            color: #ddd;
        }

        /* TABLA OSCURA */
        table {
            background: #2b2b40 !important;
            color: #e5e5e5 !important;
            border-radius: 10px;
            overflow: hidden;
        }

        thead {
            background: linear-gradient(90deg, #4a6cf7, #6366f1) !important;
            color: white !important;
        }

        tbody tr {
            background: #2b2b40;
            transition: background 0.15s ease, transform 0.08s ease;
        }

        tbody tr:hover {
            background: #35354a;
            transform: translateY(-1px);
        }

        table td,
        table th {
            border-color: #444 !important;
        }

        /* Botones */
        .btn-editar {
            background-color: #ffc107;
            border: none;
            color: #111;
            font-weight: 500;
        }

        .btn-editar:hover {
            background-color: #e0a800;
        }

        .btn-eliminar {
            background-color: #dc3545;
            border: none;
            color: white;
            font-weight: 500;
        }

        .btn-eliminar:hover {
            background-color: #bb2d3b;
        }

        .btn-salir {
            background: linear-gradient(90deg, #8b5cf6, #ec4899);
            border: none;
            color: white;
            font-weight: 600;
        }

        .btn-salir:hover {
            filter: brightness(1.05);
        }

        .badge-subtitle {
            font-size: 0.75rem;
            letter-spacing: 0.12em;
            text-transform: uppercase;
            color: #9ca3ff;
        }

        .table-title {
            display: flex;
            flex-direction: column;
        }
    </style>
</head>

<body>

    <div class="container py-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="table-title">
                <span class="badge-subtitle">Panel principal</span>
                <h2 class="text-light mb-0">Lista de Usuarios</h2>
            </div>
            <a href="/logout" class="btn btn-salir">Cerrar sesión</a>
        </div>

        <!-- TABLA -->
        <div class="card mb-4 p-3">
            <table class="table table-bordered mb-0" id="tablaLista">

                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Apellido paterno</th>
                        <th>Correo</th>
                        <th>Celular</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    <% registros.forEach(r => { %>
                    <tr data-id="<%= r.id %>">

                        <td class="campo"><%= r.id %></td>
                        <td class="campo"><%= r.nombre %></td>
                        <td class="campo"><%= r.apellido_paterno %></td>
                        <td class="campo"><%= r.correo %></td>
                        <td class="campo"><%= r.numero_celular %></td>
                        <td class="campo"><%= r.edad %></td>

                        <td class="acciones">
                            <button class="btn btn-editar btn-sm" onclick="editarFila(<%= r.id %>)">Editar</button>
                            <button class="btn btn-eliminar btn-sm" onclick="eliminarFila(<%= r.id %>)">Eliminar</button>
                        </td>

                    </tr>
                    <% }) %>
                </tbody>

            </table>
        </div>

        <!-- FORMULARIO AGREGAR -->
        <div class="card p-3 mb-4">
            <h4 class="text-light mb-3">Agregar Usuario</h4>

            <form action="/agregar" method="POST">
                <div class="row g-3">

                    <div class="col-md-2">
                        <label>ID</label>
                        <input type="number" name="id" min="0" class="form-control" required>
                    </div>

                    <div class="col-md-3">
                        <label>Nombre</label>
                        <input type="text" name="nombre" class="form-control" required>
                    </div>

                    <div class="col-md-3">
                        <label>Apellido paterno</label>
                        <input type="text" name="apellido_paterno" class="form-control" required>
                    </div>

                    <div class="col-md-4">
                        <label>Correo</label>
                        <input type="email" name="correo" class="form-control" required>
                    </div>

                    <div class="col-md-4">
                        <label>Número de celular</label>
                        <input type="tel" name="numero_celular" class="form-control" required>
                    </div>

                    <div class="col-md-2">
                        <label>Edad</label>
                        <input type="number" name="edad" min="0" class="form-control" required>
                    </div>

                    <div class="col-md-3 d-flex align-items-end">
                        <button class="btn btn-primary w-100">Agregar</button>
                    </div>

                </div>
            </form>
        </div>

    </div>

    <script src="/js/lista.js"></script>

</body>
</html>
